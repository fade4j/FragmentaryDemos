<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spacecowboy.fragmentarydemos.DailyTestActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="267dp"
        tools:layout_editor_absoluteY="267dp"
        tools:layout_editor_absoluteX="0dp"/>

    <Button
        android:id="@+id/button_load_bitmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD BITMAP"
        tools:layout_editor_absoluteX="135dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"/>

    <Button
        android:id="@+id/button_get_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET SIZE"
        tools:layout_editor_absoluteX="148dp"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="203dp"
        app:srcCompat="@drawable/transparent"
        app:layout_constraintTop_toBottomOf="@+id/button_get_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
